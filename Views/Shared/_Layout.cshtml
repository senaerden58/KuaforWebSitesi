<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShineLaB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="home">
        <div class="navbar">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <span class="logo">
                        <img src="~/web/images/kuaforLogo.png" alt="logo">
                    </span>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShineLaB</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex ">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            </li>
                            @*buraya sayfa isimleri eklenir controller seklinde*@
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Musteri" asp-action="MusteriEkle">Kayıt İşlemi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Musteri" asp-action="MusteriList">Tüm Müşteriler</a>
                            </li>

                        </ul>

                    </div>
                </div>
            </nav>
        </div>
    </header>
    
    <div class="mainDiv">
        <main role="main">
            @RenderBody()
        </main>
    </div>
  

    <footer class= "footer">
            <div class="footerDiv">
                <!--sayfalari ekle-->
                &copy; 2024 - ShineLab - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
            </div>
         <div class="icons">
        <i class="fa-brands fa-twitter"></i>
        <i class="fa-brands fa-instagram"></i>
        <i class="fa-brands fa-facebook"></i>
        <i class="fa-brands fa-pinterest"></i>
        </div>
   
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    </footer>
</body>
</html>

